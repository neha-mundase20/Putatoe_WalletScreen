<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Putatoe Wallet"
        android:textColor="@color/teal_card1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="10dp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal_card1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 0.0"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:layout_margin="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_margin="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="℗ 505"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:layout_margin="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward Points"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_margin="10dp">
            </TextView>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Transfer Money"
            android:textColor="@color/black"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="170dp"
            android:textStyle="bold">
        </Button>

    </androidx.cardview.widget.CardView>
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal_card2"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 reward points = 1 putatoe credit
1 putatoe credit = 1 rupee
Can be redeemed to your bank account on amount above ₹
10,000"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:textStyle="bold">
        </TextView>
        
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_currency_rupee_24"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@color/white">
            </ImageButton>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_add_card_24"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white">
            </ImageButton>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_account_balance_24"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white">
            </ImageButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Money"
                android:textColor="@color/teal_card2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="55dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem as Credit"
                android:textColor="@color/teal_card2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:text="Send Money to Bank"
                android:textColor="@color/teal_card2"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transactions"
        android:textColor="@color/teal_card2"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textStyle="bold">
    </TextView>

</LinearLayout>